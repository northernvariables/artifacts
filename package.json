{
  "name": "northernvariables-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Northern Variables artifacts repository - interactive data stories and main website",
  "workspaces": [
    "packages/*",
    "packages/artifacts/*"
  ],
  "scripts": {
    "dev": "vite",
    "dev:main": "npm run dev --workspace=packages/main-site",
    "dev:vote-spectrum": "npm run dev --workspace=packages/artifacts/vote-spectrum",
    "build": "node scripts/build.js",
    "build:main": "npm run build --workspace=packages/main-site",
    "build:design-system": "npm run build --workspace=packages/design-system",
    "build:artifacts": "node scripts/build-artifacts.js",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint packages --ext .ts,.tsx,.js,.jsx",
    "deploy": "npm run build && node scripts/deploy.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vercel/node": "^3.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.50.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fs-extra": "^11.2.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.0",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-imagemin": "^0.6.1",
    "rollup-plugin-visualizer": "^5.12.0"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/northernvariables/artifacts.git"
  },
  "author": "Northern Variables",
  "license": "MIT"
}
